{
  "name": "security-web-extension",
  "version": "1.0.0",
  "description": "Extensão de navegador para análise de segurança de websites",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/build/chrome dist/build/firefox",
    "dev": "webpack --mode=development --watch",
    "dev:chrome": "webpack --mode=development --watch --env browser=chrome",
    "dev:firefox": "webpack --mode=development --watch --env browser=firefox",
    "prebuild": "npm run clean",
    "build": "npm run build:chrome && npm run build:firefox",
    "prebuild:chrome": "rm -rf dist/build/chrome",
    "build:chrome": "webpack --mode=production --env browser=chrome",
    "prebuild:firefox": "rm -rf dist/build/firefox", 
    "build:firefox": "webpack --mode=production --env browser=firefox",
    "package": "scripts/package-extension.sh",
    "package:chrome": "scripts/package-extension.sh chrome",
    "package:firefox": "scripts/package-extension.sh firefox",
    "build:package": "npm run build && npm run package:chrome && npm run package:firefox",
    "lint": "eslint src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "docker:dev": "docker compose up dev",
    "docker:build": "docker compose run --rm build",
    "docker:test": "docker compose run --rm test",
    "docker:package": "docker compose run --rm -T build npm run build:package"
  },
  "keywords": [
    "security",
    "browser-extension",
    "web-safety"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "autoprefixer": "^10.4.19",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "web-ext": "^8.9.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
