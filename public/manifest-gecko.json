{
  "manifest_version": 2,
  "name": "Web Security Analyzer",
  "version": "1.0.0",
  "description": "Analisa sites em busca de possíveis ameaças de segurança antes de abri-los. Compatível com Firefox, LibreWolf",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background/index.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Web Security Analyzer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": ["icons/*"],
  "applications": {
    "gecko": {
      "id": "web-security-analyzer@example.com",
      "strict_min_version": "42.0"
    }
  }
}
