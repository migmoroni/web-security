/**
 * Configuração de chaves de API para threat intelligence
 * 
 * IMPORTANTE: 
 * 1. Nunca commite este arquivo com chaves reais
 * 2. Adicione 'src/config/api-keys.ts' no .gitignore
 * 3. Use variáveis de ambiente em produção
 */

export const API_KEYS = {
  // PhishTank API Key (gratuita)
  // Obtenha em: https://www.phishtank.com/api_info.php
  phishTank: process.env.PHISHTANK_API_KEY || 'YOUR_PHISHTANK_KEY_HERE',
  
  // VirusTotal API Key (gratuita)
  // Obtenha em: https://www.virustotal.com/gui/my-apikey
  virusTotal: process.env.VIRUSTOTAL_API_KEY || 'YOUR_VIRUSTOTAL_KEY_HERE'
};

/**
 * Verifica se as chaves estão configuradas
 */
export const validateApiKeys = (): { valid: boolean; missing: string[] } => {
  const missing: string[] = [];
  
  if (!API_KEYS.phishTank || API_KEYS.phishTank === 'YOUR_PHISHTANK_KEY_HERE') {
    missing.push('PhishTank');
  }
  
  if (!API_KEYS.virusTotal || API_KEYS.virusTotal === 'YOUR_VIRUSTOTAL_KEY_HERE') {
    missing.push('VirusTotal');
  }
  
  return {
    valid: missing.length === 0,
    missing
  };
};

